<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nag.android.volumemanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="13" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nag.android.volumemanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nag.android.volumemanager.LocationSettingActivity"
            android:label="@string/title_activity_location_setting" >
        </activity>
        <activity
            android:name="com.nag.android.volumemanager.ScheduleSettingActivity"
            android:label="@string/title_activity_location_setting" >
        </activity>
        <activity
            android:name="com.nag.android.volumemanager.EditLocationSettingsActivity"
            android:label="@string/title_activity_edit_location_settings" >
        </activity>
        <receiver android:name=".AutoReciever" android:process=":remote" />
        </application>

</manifest>
